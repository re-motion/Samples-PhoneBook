		<!-- WebClient -->
		<file template="WebClient\WebClient.csproj" target="$WebClientName$\$WebClientName$.csproj" />
		<files pattern="WebClient\*.cs" target="$WebClientName$" />
    <files pattern="WebClient\*.asax" target="$WebClientName$" />
